<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/d_name_lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Name:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/d_category_lb"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/d_category_lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Category:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_name_lb" />

    <TextView
        android:id="@+id/d_date_lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Date:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/d_amount_lb"
        app:layout_constraintTop_toBottomOf="@+id/d_amount_lb" />

    <TextView
        android:id="@+id/d_amount_lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Amount:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/d_category_lb"
        app:layout_constraintTop_toBottomOf="@+id/d_category_lb" />

    <TextView
        android:id="@+id/d_notes_lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Notes:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/d_date_lb"
        app:layout_constraintTop_toBottomOf="@+id/d_date_lb" />

    <EditText
        android:id="@+id/d_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/d_name_lb"
        app:layout_constraintEnd_toEndOf="@+id/d_category"
        app:layout_constraintStart_toStartOf="@+id/d_category"
        app:layout_constraintTop_toTopOf="@+id/d_name_lb" />

    <EditText
        android:id="@+id/d_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/d_category_lb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/d_category_lb"
        app:layout_constraintTop_toTopOf="@+id/d_category_lb" />

    <EditText
        android:id="@+id/d_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/d_notes_lb"
        app:layout_constraintEnd_toEndOf="@+id/d_date"
        app:layout_constraintStart_toStartOf="@+id/d_date"
        app:layout_constraintTop_toTopOf="@+id/d_notes_lb"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/d_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/d_amount_lb"
        app:layout_constraintEnd_toEndOf="@+id/d_category"
        app:layout_constraintStart_toStartOf="@+id/d_category"
        app:layout_constraintTop_toTopOf="@+id/d_amount_lb" />

    <EditText
        android:id="@+id/d_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="@+id/d_date_lb"
        app:layout_constraintEnd_toEndOf="@+id/d_amount"
        app:layout_constraintStart_toStartOf="@+id/d_amount"
        app:layout_constraintTop_toTopOf="@+id/d_date_lb" />
</androidx.constraintlayout.widget.ConstraintLayout>